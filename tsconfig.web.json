{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
    "local/src/renderer/**/*",
    "packages/shared/**/*",
    "packages/mcp-trace/trace-core/src/**/*",
    "packages/mcp-trace/trace-web/src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@shared/*": ["packages/shared/*"],
      "@types": ["src/renderer/src/types/index.ts"],
      "@mcp-trace/trace-core": ["packages/mcp-trace/trace-core/src"],
      "@mcp-trace/trace-web": ["packages/mcp-trace/trace-web/src"],

    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true
  }
}
